<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.playxiangqi.hoxchess">

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:name=".HoxApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- The main activity supports the new App Bar -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.playxiangqi.hoxchess.MainActivity" />
        </activity>
        
        <activity
            android:name=".TablesActivity"
            android:label="@string/title_activity_tables"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.playxiangqi.hoxchess.MainActivity" />
        </activity>
       
        <activity
            android:name=".ChatBubbleActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.playxiangqi.hoxchess.MainActivity" />
        </activity>

        <activity
            android:name=".AboutActivity"
            android:label="@string/about_title"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.playxiangqi.hoxchess.SettingsActivity" />
        </activity>
        
    </application>

</manifest>
